<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/post_name_textColor"
              android:columnCount="2"
              android:rowCount="2"
              android:splitMotionEvents="false"
              android:stretchColumns="0,1">
    <TableRow android:layout_width="fill_parent"
              android:baselineAligned="false" android:background="@android:color/background_light">
        <TextView
                android:id="@+id/StatusVK"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/recipient_text_color"
                android:visibility="visible" android:layout_marginLeft="12dp" android:layout_marginTop="12dp"
                android:layout_marginRight="12dp" android:layout_marginBottom="12dp" android:textSize="15dp"
                android:textStyle="normal" android:textIsSelectable="false"
                android:focusableInTouchMode="true" android:background="@android:color/background_light"
                style="@android:style/TextAppearance.DeviceDefault" android:hint="статус"
                android:textColorHint="@android:color/darker_gray"/>
        <!--android:layout_alignLeft="@+id/messageEditText"-->

    </TableRow>
    <TableRow android:layout_width="fill_parent"
              android:baselineAligned="false">

        <Button android:id="@+id/refresh_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:text="@string/refresh_button_name"
                android:background="@color/post_name_textColor"
                android:textColor="#ffffff"
                android:layout_alignParentLeft="true"
                android:layout_column="0"/>

        <Button android:id="@+id/post_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:text="Send"
                android:background="@color/post_name_textColor"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_column="1"/>

    </TableRow>

</TableLayout>